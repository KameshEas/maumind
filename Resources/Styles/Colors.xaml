<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- MAUMIND DESIGN SYSTEM v4.0 - 2026 ENTERPRISE EDITION                 -->
    <!-- Linear/Notion/Vercel Grade | AI-Native | Developer-First              -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- PRIMARY BRAND - Modern Indigo (Linear/Stripe Inspired)             -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <Color x:Key="PrimaryColor">#5E6AD2</Color>
    <Color x:Key="Primary">#5E6AD2</Color>
    <Color x:Key="PrimaryHover">#4F55B8</Color>
    <Color x:Key="PrimaryPressed">#454DA1</Color>
    <Color x:Key="PrimaryDark">#3D3F8F</Color>
    <Color x:Key="PrimaryLight">#8B8FE3</Color>
    <Color x:Key="PrimaryMuted">#E8EAF6</Color>
    <Color x:Key="PrimarySurface">#EEF0FB</Color>
    
    <!-- SECONDARY COLORS - Teal Accent -->
    <Color x:Key="SecondaryColor">#14B8A6</Color>
    <Color x:Key="Secondary">#14B8A6</Color>
    <Color x:Key="SecondaryDark">#0D9488</Color>
    <Color x:Key="SecondaryMuted">#CCFBF1</Color>
    
    <!-- ACCENT - Vibrant Purple for Premium Feel -->
    <Color x:Key="AccentColor">#8B5CF6</Color>
    <Color x:Key="Accent">#8B5CF6</Color>
    <Color x:Key="AccentLight">#EDE9FE</Color>
    <Color x:Key="AccentPurple">#8B5CF6</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- SEMANTIC COLORS - Meaning-First Design                             -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <!-- SUCCESS - Positive Actions -->
    <Color x:Key="SuccessColor">#10B981</Color>
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="SuccessLight">#D1FAE5</Color>
    <Color x:Key="SuccessDark">#059669</Color>
    
    <!-- ERROR - Destructive/Error States -->
    <Color x:Key="ErrorColor">#EF4444</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="ErrorLight">#FEE2E2</Color>
    <Color x:Key="ErrorDark">#DC2626</Color>
    
    <!-- WARNING - Caution States -->
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="WarningLight">#FEF3C7</Color>
    <Color x:Key="WarningDark">#D97706</Color>
    
    <!-- INFO - Informational -->
    <Color x:Key="InfoColor">#3B82F6</Color>
    <Color x:Key="Info">#3B82F6</Color>
    <Color x:Key="InfoLight">#DBEAFE</Color>
    <Color x:Key="InfoDark">#2563EB</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- LIGHT THEME - Clean & Approachable                                   -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Background - Subtle elevation hierarchy -->
    <Color x:Key="LightBackground">#F8F9FA</Color>
    <Color x:Key="LightBackgroundGradientEnd">#F0F2F5</Color>
    <Color x:Key="LightSurface">#FFFFFF</Color>
    <Color x:Key="LightSurfaceElevated">#FFFFFF</Color>
    <Color x:Key="LightSurfaceGlass">#F5FFFFFF</Color>
    <Color x:Key="LightSurfaceOverlay">#0A000000</Color>
    
    <!-- Text - Clear hierarchy -->
    <Color x:Key="LightTextPrimary">#1A1A2E</Color>
    <Color x:Key="LightTextSecondary">#6B7280</Color>
    <Color x:Key="LightTextTertiary">#9CA3AF</Color>
    <Color x:Key="LightTextDisabled">#D1D5DB</Color>
    <Color x:Key="LightTextOnPrimary">#FFFFFF</Color>
    
    <!-- Borders & Dividers -->
    <Color x:Key="LightBorder">#E5E7EB</Color>
    <Color x:Key="LightDivider">#F3F4F6</Color>
    
    <!-- Shadows -->
    <Color x:Key="LightShadowColor">#1A000000</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- DARK THEME - Eye-Friendly & Premium                                   -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Background - Elevated surfaces, no pure black for eye comfort -->
    <Color x:Key="DarkBackground">#0F0F12</Color>
    <Color x:Key="DarkBackgroundGradientEnd">#1A1A1E</Color>
    <Color x:Key="DarkSurface">#1A1A1E</Color>
    <Color x:Key="DarkSurfaceElevated">#252529</Color>
    <Color x:Key="DarkSurfaceGlass">#401A1A1E</Color>
    <Color x:Key="DarkSurfaceOverlay">#40FFFFFF</Color>
    <Color x:Key="PureBlack">#000000</Color>
    
    <!-- Text - Soft whites, never pure white -->
    <Color x:Key="DarkTextPrimary">#F9FAFB</Color>
    <Color x:Key="DarkTextSecondary">#9CA3AF</Color>
    <Color x:Key="DarkTextTertiary">#6B7280</Color>
    <Color x:Key="DarkTextDisabled">#4B5563</Color>
    <Color x:Key="DarkTextOnPrimary">#FFFFFF</Color>
    
    <!-- Borders & Dividers -->
    <Color x:Key="DarkBorder">#374151</Color>
    <Color x:Key="DarkDivider">#1F2937</Color>
    
    <!-- Shadows -->
    <Color x:Key="DarkShadowColor">#40000000</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- CHAT UI COLORS                                                       -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- User Messages - Updated to Primary Indigo -->
    <Color x:Key="UserBubbleColor">#5E6AD2</Color>
    <Color x:Key="UserBubbleLight">#E8EAF6</Color>
    <Color x:Key="UserTextColor">#FFFFFF</Color>
    <Color x:Key="UserTextLight">#1A1A2E</Color>
    
    <!-- AI Messages -->
    <Color x:Key="AIBubbleColor">#FFFFFF</Color>
    <Color x:Key="AIBubbleLight">#F3F4F6</Color>
    <Color x:Key="AITextColor">#1A1A2E</Color>
    <Color x:Key="AITextLight">#F9FAFB</Color>
    
    <!-- Chat Input -->
    <Color x:Key="ChatInputBackground">#FFFFFF</Color>
    <Color x:Key="ChatInputBackgroundDark">#252529</Color>
    <Color x:Key="ChatInputBorder">#E5E7EB</Color>
    <Color x:Key="ChatInputBorderDark">#374151</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- TAB BAR & NAVIGATION                                                 -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <Color x:Key="TabBarBackground">#FFFFFF</Color>
    <Color x:Key="TabBarBackgroundDark">#1A1A1E</Color>
    <Color x:Key="TabBarSelected">#5E6AD2</Color>
    <Color x:Key="TabBarSelectedDark">#8B8FE3</Color>
    <Color x:Key="TabBarUnselected">#9CA3AF</Color>
    <Color x:Key="TabBarUnselectedDark">#6B7280</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- GRAY SCALE - Neutral Design Tokens                                   -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Light Mode Grays -->
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>
    <Color x:Key="Gray950">#030712</Color>
    
    <!-- Legacy aliases for backward compatibility -->
    <Color x:Key="Gray100_Legacy">#F5F5F5</Color>
    <Color x:Key="Gray200_Legacy">#EEEEEE</Color>
    <Color x:Key="Gray300_Legacy">#E0E0E0</Color>
    <Color x:Key="Gray400_Legacy">#BDBDBD</Color>
    <Color x:Key="Gray500_Legacy">#9E9E9E</Color>
    <Color x:Key="Gray600_Legacy">#757575</Color>
    <Color x:Key="Gray700_Legacy">#616161</Color>
    <Color x:Key="Gray800_Legacy">#424242</Color>
    <Color x:Key="Gray900_Legacy">#212121</Color>
    <Color x:Key="Gray950_Legacy">#121212</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- SPACING TOKENS - 8pt Grid System                                     -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Semantic spacing names (values in ResourceDictionary, used in styles) -->
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">16</x:Double>
    <x:Double x:Key="SpacingLG">24</x:Double>
    <x:Double x:Key="SpacingXL">32</x:Double>
    <x:Double x:Key="SpacingXXL">48</x:Double>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- CORNER RADIUS - Consistent Shape Language                            -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <x:Double x:Key="CornerRadiusSmall">4</x:Double>
    <x:Double x:Key="CornerRadiusMedium">8</x:Double>
    <x:Double x:Key="CornerRadiusLarge">12</x:Double>
    <x:Double x:Key="CornerRadiusXL">16</x:Double>
    <x:Double x:Key="CornerRadiusFull">999</x:Double>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- TOUCH TARGETS - Accessibility Minimums                              -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <x:Double x:Key="TouchTargetMin">44</x:Double>
    <x:Double x:Key="IconSizeSmall">16</x:Double>
    <x:Double x:Key="IconSizeMedium">24</x:Double>
    <x:Double x:Key="IconSizeLarge">32</x:Double>
    <x:Double x:Key="AvatarSizeSmall">32</x:Double>
    <x:Double x:Key="AvatarSizeMedium">44</x:Double>
    <x:Double x:Key="AvatarSizeLarge">64</x:Double>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- BRUSHES - AppThemeBinding Ready                                       -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Page Backgrounds -->
    <SolidColorBrush x:Key="PageBackgroundLightBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="PageBackgroundDarkBrush" Color="#0F0F12"/>
    
    <!-- Card/Surface -->
    <SolidColorBrush x:Key="CardBackgroundLightBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackgroundDarkBrush" Color="#1A1A1E"/>
    <SolidColorBrush x:Key="SurfaceElevatedLightBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceElevatedDarkBrush" Color="#252529"/>
    
    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryLightBrush" Color="#1A1A2E"/>
    <SolidColorBrush x:Key="TextPrimaryDarkBrush" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="TextSecondaryLightBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextSecondaryDarkBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="TextTertiaryLightBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="TextTertiaryDarkBrush" Color="#6B7280"/>
    
    <!-- Legacy text colors for backward compatibility -->
    <Color x:Key="TextTertiaryLight">#9CA3AF</Color>
    <Color x:Key="TextTertiaryDark">#6B7280</Color>
    <Color x:Key="TextPrimary">#333333</Color>
    <Color x:Key="TextSecondary">#666666</Color>
    <Color x:Key="TextTertiary">#999999</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>
    <Color x:Key="SecondaryDarkText">#FFFFFF</Color>
    
    <!-- Background Colors (legacy) -->
    <Color x:Key="BackgroundColor">#F5F5F5</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="CardColor">#FFFFFF</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    
    <!-- Light Theme (legacy) -->
    <Color x:Key="LightBackground_Legacy">#FAFAFA</Color>
    <Color x:Key="LightBackgroundGradientEnd_Legacy">#F0F0F0</Color>
    <Color x:Key="LightSurface_Legacy">#FFFFFF</Color>
    <Color x:Key="LightSurfaceGlass_Legacy">#F5FFFFFF</Color>
    <Color x:Key="LightTextPrimary_Legacy">#1A1A1A</Color>
    <Color x:Key="LightTextSecondary_Legacy">#6B6B6B</Color>
    <Color x:Key="LightTextTertiary_Legacy">#9E9E9E</Color>
    
    <!-- Dark Theme (legacy) -->
    <Color x:Key="DarkBackground_Legacy">#121212</Color>
    <Color x:Key="DarkBackgroundGradientEnd_Legacy">#1E1E1E</Color>
    <Color x:Key="DarkSurface_Legacy">#1E1E1E</Color>
    <Color x:Key="DarkSurfaceGlass_Legacy">#401E1E1E</Color>
    <Color x:Key="DarkTextPrimary_Legacy">#FFFFFF</Color>
    <Color x:Key="DarkTextSecondary_Legacy">#A0A0A0</Color>
    <Color x:Key="DarkTextTertiary_Legacy">#6B6B6B</Color>
    
    <!-- Status Colors (legacy) -->
    <Color x:Key="SuccessColor_Legacy">#4CAF50</Color>
    <Color x:Key="ErrorColor_Legacy">#F44336</Color>
    <Color x:Key="WarningColor_Legacy">#FF9800</Color>
    <Color x:Key="InfoColor_Legacy">#2196F3</Color>
    <Color x:Key="SuccessGreen">#107C10</Color>
    <Color x:Key="ErrorRed">#D13438</Color>
    <Color x:Key="WarningOrange">#FF8C00</Color>
    
    <!-- Tab Bar (legacy) -->
    <Color x:Key="TabBarBackground_Legacy">#FFFFFF</Color>
    <Color x:Key="TabBarSelected_Legacy">#5E6AD2</Color>
    <Color x:Key="TabBarUnselected_Legacy">#999999</Color>
    
    <!-- Legacy Grays -->
    <Color x:Key="Gray100_Legacy_Alt">#F5F5F5</Color>
    <Color x:Key="Gray200_Legacy_Alt">#EEEEEE</Color>
    <Color x:Key="Gray300_Legacy_Alt">#E0E0E0</Color>
    <Color x:Key="Gray400_Legacy_Alt">#BDBDBD</Color>
    <Color x:Key="Gray500_Legacy_Alt">#9E9E9E</Color>
    <Color x:Key="Gray600_Legacy_Alt">#757575</Color>
    <Color x:Key="Gray700_Legacy_Alt">#616161</Color>
    <Color x:Key="Gray800_Legacy_Alt">#424242</Color>
    <Color x:Key="Gray900_Legacy_Alt">#212121</Color>
    <Color x:Key="Gray950_Legacy_Alt">#121212</Color>
    
    <!-- MAUI Standard Colors (legacy) -->
    <Color x:Key="MidnightBlue">#191970</Color>
    <Color x:Key="Magenta">#FF00FF</Color>
    <Color x:Key="OffBlack">#121212</Color>

</ResourceDictionary>
