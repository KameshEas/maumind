<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    x:Class="MauMind.App.Views.OnboardingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title=""
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False"
    NavigationPage.HasNavigationBar="False">

    <!-- Full-screen premium background -->
    <Grid x:Name="RootGrid" BackgroundColor="{StaticResource Primary}">

              <!-- Decorative elements -->
              <Ellipse x:Name="BgLayer1" WidthRequest="400" HeightRequest="400"
                 HorizontalOptions="Start" VerticalOptions="Start"
                 Margin="-120,-120,0,0"
                 Opacity="0.08">
            <Ellipse.Fill>
                <SolidColorBrush Color="White"/>
            </Ellipse.Fill>
        </Ellipse>

              <Ellipse x:Name="BgLayer2" WidthRequest="300" HeightRequest="300"
                 HorizontalOptions="End" VerticalOptions="End"
                 Margin="0,0,-80,-80"
                 Opacity="0.06">
            <Ellipse.Fill>
                <SolidColorBrush Color="White"/>
            </Ellipse.Fill>
        </Ellipse>

              <!-- Floating blobs used by animation -->
              <Ellipse x:Name="BlobTop" WidthRequest="180" HeightRequest="180"
                             HorizontalOptions="Start" VerticalOptions="Center"
                             Margin="-80,-20,0,0"
                             Opacity="0.03">
                     <Ellipse.Fill>
                            <SolidColorBrush Color="White"/>
                     </Ellipse.Fill>
              </Ellipse>

              <Ellipse x:Name="BlobBottom" WidthRequest="160" HeightRequest="160"
                             HorizontalOptions="End" VerticalOptions="Center"
                             Margin="0,0,-60,20"
                             Opacity="0.03">
                     <Ellipse.Fill>
                            <SolidColorBrush Color="White"/>
                     </Ellipse.Fill>
              </Ellipse>

        <!-- Main content layer -->
        <Grid RowDefinitions="Auto,*,Auto">

            <!-- Skip button (top-right) -->
            <Button x:Name="SkipButton"
                    Grid.Row="0"
                    Text="Skip"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    FontSize="15"
                    Opacity="0.8"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Margin="0,56,24,0"
                    Clicked="OnSkipClicked"/>

            <!-- Slide Content Area -->
            <Grid Grid.Row="1">

                <!-- Slide 0: Privacy -->
                <StackLayout x:Name="Slide0"
                             VerticalOptions="Center" HorizontalOptions="Center"
                             Padding="32,0" Spacing="0">
                    <!-- Icon circle -->
                    <Frame x:Name="S0Icon" WidthRequest="100" HeightRequest="100"
                           CornerRadius="50" Padding="0"
                           HorizontalOptions="Center"
                           BackgroundColor="#20FFFFFF"
                           Margin="0,0,0,32">
                        <Label Text="&#x1F512;" FontSize="44"
                               HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Frame>
                    <Label x:Name="S0Title"
                           Text="100% Private"
                           FontSize="28" FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,12"/>
                    <Label x:Name="S0Desc"
                           Text="All AI runs on your device.&#x0a;No cloud. No tracking. No exceptions."
                           FontSize="16"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineHeight="1.5"/>
                </StackLayout>

                <!-- Slide 1: Documents -->
                <StackLayout x:Name="Slide1"
                             VerticalOptions="Center" HorizontalOptions="Center"
                             Padding="32,0" Spacing="0"
                             IsVisible="False" Opacity="0">
                    <Frame x:Name="S1Icon" WidthRequest="100" HeightRequest="100"
                           CornerRadius="50" Padding="0"
                           HorizontalOptions="Center"
                           BackgroundColor="#20FFFFFF"
                           Margin="0,0,0,32">
                        <Label Text="&#x1F4DA;" FontSize="44"
                               HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Frame>
                    <Label x:Name="S1Title"
                           Text="Your Knowledge"
                           FontSize="28" FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,12"/>
                    <Label x:Name="S1Desc"
                           Text="Import PDFs, add notes, write journals.&#x0a;Build your personal knowledge base."
                           FontSize="16"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineHeight="1.5"/>
                </StackLayout>

                <!-- Slide 2: Search -->
                <StackLayout x:Name="Slide2"
                             VerticalOptions="Center" HorizontalOptions="Center"
                             Padding="32,0" Spacing="0"
                             IsVisible="False" Opacity="0">
                    <Frame x:Name="S2Icon" WidthRequest="100" HeightRequest="100"
                           CornerRadius="50" Padding="0"
                           HorizontalOptions="Center"
                           BackgroundColor="#20FFFFFF"
                           Margin="0,0,0,32">
                        <Label Text="&#x1F50E;" FontSize="44"
                               HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Frame>
                    <Label x:Name="S2Title"
                           Text="Ask Anything"
                           FontSize="28" FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,12"/>
                    <Label x:Name="S2Desc"
                           Text="Get answers from your documents.&#x0a;Powered by AI, completely private."
                           FontSize="16"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineHeight="1.5"/>
                </StackLayout>

                <!-- Slide 3: Ready -->
                <StackLayout x:Name="Slide3"
                             VerticalOptions="Center" HorizontalOptions="Center"
                             Padding="32,0" Spacing="0"
                             IsVisible="False" Opacity="0">
                    <Frame x:Name="S3Icon" WidthRequest="100" HeightRequest="100"
                           CornerRadius="50" Padding="0"
                           HorizontalOptions="Center"
                           BackgroundColor="#20FFFFFF"
                           Margin="0,0,0,32">
                        <Label Text="&#x2728;" FontSize="44"
                               HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Frame>
                    <Label x:Name="S3Title"
                           Text="Ready to Go"
                           FontSize="28" FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,12"/>
                    <Label x:Name="S3Desc"
                           Text="Your private AI assistant is set up.&#x0a;Everything stays on your device."
                           FontSize="16"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineHeight="1.5"/>
                </StackLayout>

            </Grid>

            <!-- Bottom area: dots + button -->
            <Grid Grid.Row="2" Margin="32,0,32,56">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Progress Dots -->
                <HorizontalStackLayout Grid.Row="0"
                                       x:Name="DotsContainer"
                                       HorizontalOptions="Center"
                                       Spacing="10">
                    <!-- Dot 0 (active) -->
                    <Frame x:Name="Dot0"
                           HeightRequest="8" WidthRequest="24"
                           CornerRadius="4" Padding="0"
                           BackgroundColor="White"/>
                    <!-- Dot 1 -->
                    <Frame x:Name="Dot1"
                           HeightRequest="8" WidthRequest="8"
                           CornerRadius="4" Padding="0"
                           BackgroundColor="White" Opacity="0.4"/>
                    <!-- Dot 2 -->
                    <Frame x:Name="Dot2"
                           HeightRequest="8" WidthRequest="8"
                           CornerRadius="4" Padding="0"
                           BackgroundColor="White" Opacity="0.4"/>
                    <!-- Dot 3 -->
                    <Frame x:Name="Dot3"
                           HeightRequest="8" WidthRequest="8"
                           CornerRadius="4" Padding="0"
                           BackgroundColor="White" Opacity="0.4"/>
                </HorizontalStackLayout>

                <!-- Next / Get Started Button -->
                <Button x:Name="NextButton"
                        Grid.Row="2"
                        Text="Next"
                        BackgroundColor="White"
                        TextColor="{StaticResource Primary}"
                        FontAttributes="Bold"
                        FontSize="16"
                        CornerRadius="24"
                        HeightRequest="48"
                        HorizontalOptions="Fill"
                        Clicked="OnNextClicked"/>
            </Grid>

        </Grid>
    </Grid>

</ContentPage>
